<div id="portfolio-overview-carousel" class="carousel slide py-5" data-ride="carousel">
  <div class="container carousel-inner">
    {% set counter = 0 %}
    {% for card in site.data.cards %}
      {% if card.name != page.name %}
        {% capture cycle_count %}{% cycle '1', '2', '3' %}{% endcapture %}
        {% set counter = counter | plus: 1 %}
        {% if counter == 1 %}
          <div class="carousel-item active">
            <div class="row">
        {% elsif cycle_count == '1' %}
          <div class="carousel-item">
            <div class="row">
        {% endif %}
              <div class="col-lg-4 d-flex">
                {% include card.html %}
              </div>
        {% if cycle_count == '3' or forloop.last %}
            </div>
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#portfolio-overview-carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#portfolio-overview-carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
</div>
