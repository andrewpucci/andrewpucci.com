<div id="portfolio-overview-carousel" class="carousel slide py-5" data-bs-ride="carousel">
  <div class="container carousel-inner">
    {% set counter = 0 %}
    {% for card in cards %}
      {% if card.name != name %}
        {% set counter = counter + 1 %}
        {% if counter == 1 %}
          <div class="carousel-item active">
            <div class="row">
        {% elif counter % 3 == 1 %}
          </div>
        </div>
        <div class="carousel-item">
          <div class="row">
        {% endif %}
        <div class="col-lg-4 d-flex mb-3 mb-lg-0">
          {% card card.title, card.content, card.url, card.imgurl, card.title, "card-img-top h-auto", "410", [410, 820, null] %}
        </div>
        {% if loop.last %}
          </div>
        </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#portfolio-overview-carousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#portfolio-overview-carousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
